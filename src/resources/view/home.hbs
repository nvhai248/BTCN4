<script defer src="/js/home.js"></script>
<link rel="stylesheet" href="/css/home.css">
<header>
    {{>header}}
</header>
{{> sidebar}}


<div class="container mt-3 mb-3">
    <table class="table table-striped table-hover">
    <thead>
        <tr class="table-dark">
        <th scope="col">#</th>
        <th scope="col">Product ID</th>
        <th scope="col">Product Name</th>
        <th scope="col">Price</th>
        <th scope="col" colspan="2">Quantity</th>
        </tr>
    </thead>
    <tbody>
        {{#each product}}
        <tr>
        <th scope="row">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="{{ProductID}}" id="{{ProductID}}" name="proSelect">
            </div>
        </th>
        <th>{{ProductID}}</th>
        <td>{{ProductName}}</td>
        <td>{{UnitPrice}}</td>
        <td>{{UnitsInStock}}</td>
        <td style="width: 50px;">
            <input style="width: 50px;" type="number" name="Quantity" id="{{ProductID}}">
        </td>
        </tr>
        {{/each}}

        {{{addCart}}}
    </tbody>
    </table>
</div>



<footer>
    {{>footer}}
</footer>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>